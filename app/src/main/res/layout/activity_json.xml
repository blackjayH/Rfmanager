<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:dividerHeight="4dp"
    android:orientation="vertical"
    android:padding="3dp"
    android:gravity="center">
    <Button
        android:id="@+id/loadshoppingbuttton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:text="쇼핑리스트 데이터 가져오기"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/loadrfitemlistbuttton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:text="냉장고아이템 데이터 가져오기"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/saveshoppingbuttton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="쇼핑리스트 데이터 백업"
        android:layout_gravity="center"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/saverfitemlistbuttton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="냉장고아이템 데이터 백업"
        android:layout_gravity="center"
        android:textAllCaps="false" />

</LinearLayout>