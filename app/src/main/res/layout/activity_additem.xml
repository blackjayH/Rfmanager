<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:dividerHeight="4dp"
    android:orientation="vertical"
    android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/barcode"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="바코드" />
        <Button
            android:id="@+id/stt"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="음성" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="상품 " />
        <EditText
            android:id="@+id/edit1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint=" +add a item name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="수량 " />

        <EditText
            android:id="@+id/edit2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint=" +add amount(숫자만 가능합니다)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="보관방법 " />
        <EditText
            android:id="@+id/edit3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:hint="아래 버튼 3가지 중 한가지를 눌러주세요" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/inputbutton1"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="실온" />
        <Button
            android:id="@+id/inputbutton2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="냉장" />
        <Button
            android:id="@+id/inputbutton3"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="냉동" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="유통기한 " />
        <EditText
            android:id="@+id/edit4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:hint="우측 버튼을 선택하여 날짜를 입력해주세요" />
        <Button
            android:id="@+id/inputbutton4"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="달력" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title5"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="카테고리 " />
        <EditText
            android:id="@+id/edit5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="우측 카테고리 선택" />
        <Button
            android:id="@+id/inputbutton5"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="카테고리" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title6"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="등록일짜 " />
        <EditText
            android:id="@+id/edit6"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:hint="등록일을 바꾸고 싶으면 선택해주세요" />
        <Button
            android:id="@+id/inputbutton6"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:text="달력" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title7"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="메모" />
        <EditText
            android:id="@+id/edit7"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint=" +add detail content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/gotodel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="리셋" />

        <Button
            android:id="@+id/gotosave"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="저장" />

    </LinearLayout>
    <TextView
        android:id="@+id/sqlresult"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        />
</LinearLayout>